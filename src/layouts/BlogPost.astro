---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import NoiseFilter from "../components/NoiseFilter.astro";

type Props = CollectionEntry<"blog">["data"];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<html lang="en" class="dark">
  <head>
    <BaseHead title={`${title} | Guilherme Sousa`} description={description} />
  </head>

  <body
    class="dark:bg-gradient-to-br gradient bg-no-repeat bg-fixed min-h-screen dark:text-neutral-400 leading-[1.8]"
  >
    <div class="max-w-screen-md mx-auto">
      <Header />

      <main class="max-w-screen-sm mx-auto px-4 mt-8">
        <article>
          <h1 class="font-bold text-3xl sm:text-4xl">
            {title}
          </h1>
          <p class="text-md mt-2 mb-0">{description}</p>
          <div>
            <FormattedDate class="text-sm text-neutral-600" date={pubDate} />

            {
              updatedDate && (
                <div class="text-sm text-neutral-600">
                  Last updated on <FormattedDate date={updatedDate} />
                </div>
              )
            }
          </div>

          <div
            class="mt-4 prose prose-invert prose-a:no-underline text-neutral-400"
          >
            <slot />
          </div>
        </article>
      </main>

      <Footer />
    </div>

    <NoiseFilter />
  </body>
</html>
