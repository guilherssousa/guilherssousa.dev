---
import BaseHead from "../components/BaseHead.astro";

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const { title, description, image } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} image={image} />
  </head>

  <body
    class="max-w-screen-lg mx-auto bg-slate-50 text-neutral-700 md:flex md:divide-x divide-neutral-200 pt-6"
  >
    <Header />
    <main class="md:ml-6 py-2 px-4 antialised">
      <article class="prose prose-orange w-full prose-a:no-underline">
        <slot />
      </article>
      <Footer />
    </main>
  </body>
</html>
