---
import BaseHead from "../components/BaseHead.astro";

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const { title, description, image } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} image={image} />
  </head>

  <body
    class:list={[
      "max-w-screen-lg mx-auto md:flex md:divide-x pt-6",
      "bg-slate-50 text-neutral-700",
      "divide-neutral-200 dark:divide-neutral-800",
      "dark:bg-neutral-900 dark:text-neutral-300",
    ]}
  >
    <Header />
    <main class="md:ml-6 py-2 px-4 antialised">
      <article
        class:list={[
          "prose w-full prose-a:no-underline",
          "prose-orange dark:prose-invert",
        ]}
      >
        <slot />
      </article>
      <Footer />
    </main>
  </body>
</html>
